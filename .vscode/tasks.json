{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build C Project",
      "type": "shell",
      "command": "clang",
      "args": [
        "-g",
        "${fileDirname}/*.c",
        "-o",
        "${fileDirname}/program",
        "-lm"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": [
        "$gcc"
      ],
      "detail": "Compile all .c files in the current directory"
    },
    {
      "label": "Build Lab-1",
      "type": "shell",
      "command": "clang",
      "args": [
        "-g",
        "${workspaceFolder}/lab-1/src/*.c",
        "-o",
        "${workspaceFolder}/lab-1/src/program",
        "-lm"
      ],
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ],
      "detail": "Build lab-1 project"
    },
    {
      "label": "Build Lab-2",
      "type": "shell",
      "command": "clang",
      "args": [
        "-g",
        "${workspaceFolder}/lab-2/src/main.c",
        "${workspaceFolder}/lab-2/src/chords/chords.c",
        "${workspaceFolder}/lab-2/src/f/f.c",
        "${workspaceFolder}/lab-2/src/iteration/iteration.c",
        "${workspaceFolder}/lab-2/src/log/log.c",
        "-o",
        "${workspaceFolder}/lab-2/src/program",
        "-lm"
      ],
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ],
      "detail": "Build lab-2 project"
    },
    {
      "label": "Build Lab-3",
      "type": "shell",
      "command": "clang",
      "args": [
        "-g",
        "${workspaceFolder}/lab-3/src/main.c",
        "${workspaceFolder}/lab-3/src/gauss/gauss.c",
        "${workspaceFolder}/lab-3/src/gauss-seidel/gauss-seidel.c",
        "${workspaceFolder}/lab-3/src/log/log.c",
        "${workspaceFolder}/lab-3/src/matrix/matrix.c",
        "${workspaceFolder}/lab-3/src/vector/vector.c",
        "-o",
        "${workspaceFolder}/lab-3/src/program",
        "-lm"
      ],
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ],
      "detail": "Build lab-3 project"
    },
    {
      "label": "Clean Build Artifacts",
      "type": "shell",
      "command": "find",
      "args": [
        "${workspaceFolder}",
        "-name",
        "program",
        "-type",
        "f",
        "-delete"
      ],
      "group": "build",
      "problemMatcher": [],
      "detail": "Remove all compiled program files"
    },
    {
      "type": "cppbuild",
      "label": "C/C++: clang build active file",
      "command": "/usr/bin/clang",
      "args": [
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ]
}